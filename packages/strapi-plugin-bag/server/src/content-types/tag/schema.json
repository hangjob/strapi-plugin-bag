{
  "kind": "collectionType",
  "collectionName": "bag_tags",
  "info": {
    "singularName": "tag",
    "pluralName": "tags",
    "displayName": "标签管理",
    "description": "内容标签管理"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": { "visible": true }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::strapi-plugin-bag.article",
      "inversedBy": "tags"
    }
  }
}

